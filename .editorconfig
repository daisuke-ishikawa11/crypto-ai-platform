# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation for most files
[*.{ts,tsx,js,jsx,json,html,css,scss,md,yml,yaml}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Specific settings for package.json
[package.json]
indent_style = space
indent_size = 2

# Specific settings for markdown files
[*.md]
trim_trailing_whitespace = false

# Specific settings for lesson files
[src/data/lessons/**/*.ts]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true