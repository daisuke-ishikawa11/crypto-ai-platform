{
  "dashboard": {
    "id": null,
    "title": "Crypto AI Platform - Overview",
    "tags": ["crypto-ai", "overview"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 0,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "links": [],
    "panels": [
      {
        "id": 1,
        "title": "Application Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"crypto-ai-app\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "color": "red",
                    "text": "Down"
                  },
                  "1": {
                    "color": "green",
                    "text": "Up"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"crypto-ai-app\"}[5m])",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"crypto-ai-app\", status=~\"5..\"}[5m]) / rate(http_requests_total{job=\"crypto-ai-app\"}[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"crypto-ai-app\"}[5m]))",
            "refId": "A",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"crypto-ai-app\"}[5m]))",
            "refId": "B",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "crypto_ai_active_users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A",
            "legendFormat": "Active connections"
          },
          {
            "expr": "pg_settings_max_connections",
            "refId": "B",
            "legendFormat": "Max connections"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "Disk Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
            "refId": "A",
            "legendFormat": "{{instance}} - {{mountpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "max": 100,
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        }
      },
      {
        "id": 10,
        "title": "Pod Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_info{namespace=~\"crypto-ai-.*\"}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "namespace": "Namespace",
                "pod": "Pod Name",
                "node": "Node"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 11,
        "title": "AI Service Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"crypto-ai-app\", handler=~\"/api/ai/.*\"}[5m])",
            "refId": "A",
            "legendFormat": "AI Requests/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"crypto-ai-app\", handler=~\"/api/ai/.*\"}[5m]))",
            "refId": "B",
            "legendFormat": "AI Response Time (95th)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 12,
        "title": "DeFi Protocol Status",
        "type": "stat",
        "targets": [
          {
            "expr": "defi_protocol_connection_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "color": "red",
                    "text": "Disconnected"
                  },
                  "1": {
                    "color": "green",
                    "text": "Connected"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 13,
        "title": "Portfolio Optimizations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(portfolio_optimization_attempts_total[5m])",
            "refId": "A",
            "legendFormat": "Attempts"
          },
          {
            "expr": "rate(portfolio_optimization_success_total[5m])",
            "refId": "B",
            "legendFormat": "Successes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 32
        }
      },
      {
        "id": 14,
        "title": "Market Data Freshness",
        "type": "stat",
        "targets": [
          {
            "expr": "time() - market_data_last_update_timestamp",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 60
                },
                {
                  "color": "red",
                  "value": 300
                }
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 32
        }
      }
      ,
      {
        "id": 15,
        "title": "Active Subscribers",
        "type": "stat",
        "targets": [
          { "expr": "business_active_subscribers_total", "refId": "A" }
        ],
        "fieldConfig": { "defaults": { "unit": "none" } },
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 40 }
      },
      {
        "id": 16,
        "title": "Trial Subscribers",
        "type": "stat",
        "targets": [
          { "expr": "business_trial_subscribers_total", "refId": "A" }
        ],
        "fieldConfig": { "defaults": { "unit": "none" } },
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 40 }
      },
      {
        "id": 17,
        "title": "Revenue Today by Currency",
        "type": "bargauge",
        "targets": [
          { "expr": "sum(business_revenue_today_total) by (currency)", "refId": "A" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 40 }
      },
      {
        "id": 18,
        "title": "Revenue Last 30d by Currency",
        "type": "bargauge",
        "targets": [
          { "expr": "sum(business_revenue_30d_total) by (currency)", "refId": "A" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 46 }
      }
    ]
  }
}
