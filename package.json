{
  "name": "crypto-ai-platform",
  "version": "1.0.0",
  "description": "次世代暗号通貨投資プラットフォーム - 85レッスン・AI分析・スマートアラート",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "node scripts/performance-test.js",
    "test:performance:lighthouse": "node scripts/performance-test.js --lighthouse",
    "test:performance:bundle": "node scripts/performance-test.js --bundle",
    "test:performance:load": "node scripts/performance-test.js --load",
    "security:scan": "node scripts/security-scanner.js",
    "security:scan:critical": "node scripts/security-scanner.js --severity critical",
    "security:audit": "npm audit && node scripts/security-scanner.js",
    "production:check": "node scripts/production-readiness-check.js",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "tsx scripts/seed-database.ts",
    "generate:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/types/supabase.ts",
    "clean": "rimraf .next out .open-next test-results test-report coverage",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.3.4",
    "@next/bundle-analyzer": "^14.2.5",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@sentry/nextjs": "^9.38.0",
    "@stripe/stripe-js": "^4.1.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.51.0",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.51.23",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "crypto-browserify": "^3.12.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.6",
    "next": "15.4.1",
    "openai": "^5.9.0",
    "posthog-js": "^1.257.0",
    "process": "^0.11.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.52.2",
    "react-markdown": "^9.0.3",
    "recharts": "^3.1.0",
    "sharp": "^0.33.4",
    "stream-browserify": "^3.0.0",
    "stripe": "^16.12.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.7",
    "tailwindcss-animate": "^1.0.7",
    "util": "^0.12.5",
    "zod": "^3.25.76",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.54.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-playwright-preset": "^4.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^15.2.7",
    "node-mocks-http": "^1.15.1",
    "open-next": "^3.0.8",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tailwindcss-animate": "^1.0.7",
    "textlint": "^15.2.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "ts-jest": "^29.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5",
    "wrangler": "^3.114.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test:ci"
    }
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml"
  }
}
