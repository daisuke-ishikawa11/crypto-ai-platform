{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@crypto/defi": ["./packages/defi/src/index.ts"],
      "@crypto/defi/*": ["./packages/defi/src/*"]
    },
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "types": ["react", "react-dom", "node", "jest"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "mcp-serena/**/*", 
    "serena/**/*",
    "saas-starter/**/*",
    "my-project/**/*",
    "agents/**/*",
    "tests/**/*",
    "playwright.config.ts",
    "playwright-simple.config.ts",
    "**/*backup*",
    "**/*bak*",
    "**/*broken*",
    "**/*quote-fix*",
    "**/*type-fix*",
    "**/*.backup",
    "**/*.bak*",
    "**/.*"
  ]
}


